<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane style="-fx-background-color: #E8E8E8;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controllers.LoginController">
   <children>
      <!-- Background Image - Fills entire page -->
      <ImageView fitHeight="1000.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <image>
            <Image url="@../images/background.jpg" />
         </image>
      </ImageView>
      
      <!-- Login Form Container - Centered with padding -->
      <StackPane alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Login Form Card with rounded corners and shadow -->
            <VBox alignment="CENTER" maxHeight="700.0" maxWidth="550.0" minHeight="600.0" minWidth="500.0" prefHeight="650.0" prefWidth="520.0" spacing="28.0" style="-fx-background-color: rgba(255, 255, 255, 0.98); -fx-background-radius: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 25, 0, 0, 8);">
               <padding>
                  <Insets bottom="70.0" left="70.0" right="70.0" top="70.0" />
               </padding>
               <children>
                  <!-- DorPay Logo -->
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/logo.jpg" />
                           </image>
                        </ImageView>
                        <Text fill="#5a0bb4" strokeType="OUTSIDE" strokeWidth="0.0" text="DORPAY">
                           <font>
                              <Font name="Arial Bold" size="24.0" />
                           </font>
                        </Text>
                     </children>
                  </HBox>
                  
                  <!-- Welcome Text -->
                  <Text fill="#333333" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome back to the Dorpay Community!" textAlignment="CENTER" wrappingWidth="380.0">
                     <font>
                        <Font name="Arial Bold" size="26.0" />
                     </font>
                  </Text>
                  
                  <!-- Email/Username Field -->
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Email or Username" textFill="#757575">
                           <font>
                              <Font name="Arial" size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="usernameField" prefHeight="38.0" prefWidth="380.0" promptText="johndadev" style="-fx-background-color: transparent; -fx-border-color: transparent transparent #CCCCCC transparent; -fx-border-width: 0 0 1 0; -fx-padding: 6 0 6 0;">
                           <font>
                              <Font name="Arial" size="15.0" />
                           </font>
                        </TextField>
                     </children>
                  </VBox>
                  
                  <!-- Password Field -->
                  <VBox spacing="10.0">
                     <children>
                        <Label text="Password" textFill="#757575">
                           <font>
                              <Font name="Arial" size="13.0" />
                           </font>
                        </Label>
                        <StackPane prefHeight="38.0" prefWidth="380.0">
                           <children>
                              <PasswordField fx:id="passwordField" prefHeight="38.0" prefWidth="380.0" promptText="Enter your password" style="-fx-background-color: transparent; -fx-border-color: transparent transparent #CCCCCC transparent; -fx-border-width: 0 0 1 0; -fx-padding: 6 40 6 0;">
                                 <font>
                                    <Font name="Arial" size="15.0" />
                                 </font>
                              </PasswordField>
                              <TextField fx:id="passwordVisibleField" prefHeight="38.0" prefWidth="380.0" promptText="Enter your password" style="-fx-background-color: transparent; -fx-border-color: transparent transparent #CCCCCC transparent; -fx-border-width: 0 0 1 0; -fx-padding: 6 40 6 0;" visible="false">
                                 <font>
                                    <Font name="Arial" size="15.0" />
                                 </font>
                              </TextField>
                              <Button fx:id="togglePasswordBtn" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#togglePasswordVisibility" prefHeight="38.0" prefWidth="35.0" style="-fx-background-color: transparent; -fx-background-radius: 0; -fx-padding: 0 8 0 0;" text="ðŸ‘" textFill="#757575" StackPane.alignment="CENTER_RIGHT">
                                 <font>
                                    <Font name="Arial" size="16.0" />
                                 </font>
                              </Button>
                           </children>
                        </StackPane>
                     </children>
                  </VBox>
                  
                  <!-- Remember Me -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <CheckBox fx:id="rememberMeCheckBox" selected="true" style="-fx-text-fill: #757575;">
                           <font>
                              <Font name="Arial" size="13.0" />
                           </font>
                        </CheckBox>
                        <Label text="Remember me" textFill="#757575">
                           <font>
                              <Font name="Arial" size="13.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  
                  <!-- Login Button -->
                  <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="52.0" prefWidth="380.0" style="-fx-background-color: #7B76F1; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="LOG IN" textFill="WHITE">
                     <font>
                        <Font name="Arial Bold" size="15.0" />
                     </font>
                  </Button>
                  
                  <!-- Error Label -->
                  <Label fx:id="errorLabel" textFill="#FF0000" visible="false">
                     <font>
                        <Font name="Arial" size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
